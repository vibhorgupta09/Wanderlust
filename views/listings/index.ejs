<% layout('/layouts/boilerplate') -%>

<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  #filters a{
    color: inherit;
    text-decoration: none;
  }

  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .filter p{
    font-size: 0.8 rem;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.15rem;
    padding: 1rem;
    margin-left: 7rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <!-- Trending (All Listings) -->
  <a href="/listings">
      <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
      </div>
  </a>

  <!-- Rooms -->
  <a href="/listings/category/rooms">
      <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
      </div>
  </a>

  <!-- Iconic Cities -->
  <a href="/listings/category/iconic-cities">
      <div class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
      </div>
  </a>

  <!-- Mountains -->
  <a href="/listings/category/mountains">
      <div class="filter">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
      </div>
  </a>

  <!-- Castles -->
  <a href="/listings/category/castles">
      <div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
      </div>
  </a>

  <!-- Amazing Pools -->
  <a href="/listings/category/amazing-pools">
      <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
      </div>
  </a>

  <!-- Camping -->
  <a href="/listings/category/camping">
      <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
      </div>
  </a>

  <!-- Farms -->
  <a href="/listings/category/farms">
      <div class="filter">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
      </div>
  </a>

  <!-- Arctic -->
  <a href="/listings/category/arctic">
      <div class="filter">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
      </div>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>

</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                &#8377; <%=listing.price.toLocaleString("en-IN")%> / night <i class="tax-info">&nbsp; &nbsp; + 18% GST</i>
              </p>
            </div>
          </div>
        </a>
    <%}%>
</div>

<script>
  let taxSwitch= document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display!="inline") {
        info.style.display="inline";
      } else {
        info.style.display="none";
      }
    }
  });
</script>

